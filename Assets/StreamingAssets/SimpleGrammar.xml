<?xml version="1.0" encoding="utf-8" ?>

<grammar xml:lang="en" root="yesorno"
tag-format="semantics/1.0" version="1.0"
xmlns="http://www.w3.org/2001/06/grammar">

  <rule id="yesorno">
    <one-of>
      <item>
        <ruleref uri="#jump"/>
      </item>
      <item>
        <ruleref uri="#start"/>
      </item>
      <item>
        <ruleref uri="#quit"/>
      </item>
      <item>
        <ruleref uri="#restart"/>
      </item>
      <item>
        <ruleref uri="#pause"/>
      </item>
      <item>
        <ruleref uri="#resume"/>
      </item>
      <item>
        <ruleref uri="#instructions"/>
      </item>
      <item>
        <ruleref uri="#back"/>
      </item>
    </one-of>
  </rule>

  <rule id="start">
    <item>start</item>
  </rule>

  <rule id="quit">
    <item>quit</item>
  </rule>

  <rule id="restart">
    <item>restart</item>
  </rule>

  <rule id="pause">
    <item>pause</item>
  </rule>

  <rule id="resume">
    <item>resume</item>
  </rule>

  <rule id="instructions">
    <item>instructions</item>
  </rule>

  <rule id="back">
    <item>back</item>
  </rule>

  <rule id="jump">
    <item>jump</item>
  </rule>

</grammar>
